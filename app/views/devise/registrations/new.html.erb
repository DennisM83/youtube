<div class="flex flex-col items-center justify-center">
  <h2 class="text-2xl">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded pr-16" %>
  </div>

  <div class="field my-5">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded pr-16" %>
  </div>

  <div class="field my-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded pr-16" %>
  </div>

  <div class="flex my-10">
    <div class="actions mr-5">
      <%= f.submit "Sign up", class: "px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>